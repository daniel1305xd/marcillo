<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Uteq y fundacion maquina firmaron convenio "
                android:textColor="#121212" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgUsr"
            android:layout_width="148dp"
            android:layout_height="158dp"
            android:layout_gravity="center|center_horizontal|center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgcalendario"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/calendar_month_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

            <TextView
                android:id="@+id/txtpublic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="publicado el:" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/youtube_activity_24dp_1f1f1f_fill0_wght400_grad0_opsz24" />

    </LinearLayout>
</LinearLayout>